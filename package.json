{
  "name": "repo-stack.ext",
  "displayName": "Repo Stack",
  "version": "0.0.2",
  "description": "Display repo stack details",
  "keywords": [
    "repo stack",
    "vite",
    "extension",
    "chrome",
    "firefox"
  ],
  "license": "MIT",
  "homepage": "https://github.com/JiangWeixian/repo-stack.ext",
  "repository": {
    "type": "git",
    "url": "https://github.com/JiangWeixian/repo-stack.ext"
  },
  "bugs": {
    "url": "https://github.com/JiangWeixian/repo-stack.ext/issues",
    "email": "jiangweixian1994@gmail.com"
  },
  "author": "JW <jiangweixian1994@gmail.com> (https://twitter.com/jiangweixian)",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:bg": "tsup --watch ./src",
    "build": "cross-env NODE_ENV=production run-s clear build:*",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:bg": "tsup",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint:fix": "eslint . --fix",
    "ci:version": "pnpx changeset version",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "document-ready": "^2.0.2",
    "git-url-parse": "^11.6.0",
    "lodash-es": "^4.17.21",
    "markdown-it": "^12.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.2.2",
    "@changesets/cli": "^2.17.0",
    "@ffflorian/jszip-cli": "^3.1.5",
    "@tailwindcss/typography": "^0.5.2",
    "@types/document-ready": "^2.0.0",
    "@types/fs-extra": "^9.0.12",
    "@types/git-url-parse": "^9.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/webextension-polyfill": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@vitejs/plugin-react": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.4",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "cz-emoji": "^1.3.1",
    "daisyui": "^2.13.6",
    "eslint": "^7.32.0",
    "esno": "^0.9.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "kolorist": "^1.5.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "tsup": "^5.12.4",
    "type-fest": "^2.12.2",
    "typescript": "^4.4.2",
    "unplugin-auto-import": "^0.6.9",
    "vite": "^2.5.4",
    "web-ext": "^6.3.0",
    "webext-bridge": "^5.0.4",
    "webextension-polyfill": "^0.9.0"
  }
}
